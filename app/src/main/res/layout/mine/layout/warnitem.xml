<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/roomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间名称：XX房间"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pigType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/roomName"
            android:text="品种：母猪"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pigNum"
            android:layout_below="@id/roomName"
            android:layout_toRightOf="@id/pigType"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量: 6"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/roomState"
            android:layout_below="@id/pigType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间状态: 异常"
            android:textSize="18sp" />

        <Button
            android:layout_below="@id/roomState"
            android:id="@+id/removeWarn"
            android:textSize="17sp"
            android:textColor="#159BD6"
            android:text="取消警报"
            android:layout_marginBottom="5dp"
            android:layout_width="110dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/detil"
            android:textSize="17sp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/roomState"
            android:layout_toRightOf="@id/removeWarn"
            android:textColor="#159BD6"
            android:text="查看详情"
            android:layout_marginBottom="5dp"
            android:layout_width="110dp"
            android:layout_height="50dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
